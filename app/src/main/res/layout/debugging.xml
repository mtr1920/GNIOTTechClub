<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:text="Debugging" />

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#8E24aa"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/imageView1"
                        android:src="@drawable/debugging"
                        android:layout_height="130dp"
                        android:layout_width="140dp"
                        android:layout_alignParentRight="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Debugging contest is divided into 3 levels:- "
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:paddingRight="120dp"/>
                        <TextView
                            android:text="•	First level (Finding Errors): 20 questions in 15 min."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:paddingRight="120dp" />
                        <TextView
                            android:text="•	Second level (Jumbled Programs): 15 questions in 10 min."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:textSize="14sp"
                            android:paddingRight="120dp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="•	Third level (Output of Programs): 10 questions in 15 min."
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#8E24aa"
                android:padding="16dp">

                <TextView
                    android:text="Rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView3"
                    android:textStyle="normal|bold"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="#ffffff" />


                <TextView
                    android:text="1. There will be three levels:"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />

                <TextView
                    android:text="  LEVEL 1 : multiple choice question. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="  LEVEL 2 : error detection. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="  LEVEL 3 : output of the program.   "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="2. There will be 10 minutes break after every level. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="3. Only those who qualify. LEVEL 1 will be allowed to the next level and so on.   "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="4. Participants should bring their laptops.   "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#8E24aa"
                android:padding="16dp">

                <TextView
                    android:text="Schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:text="April 06-07,2018 at GNIOT"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
