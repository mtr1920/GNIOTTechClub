<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:text="Quiz" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#263228"
            android:padding="16dp">

        <ImageView
            android:id="@+id/imageView1"
            android:src="@drawable/quiz"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only group entries will be accepted with at least 2 members in it. Each question has multiple correct answers – the goal is to list as many as possible."
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:paddingRight="90dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The great advantage of this type of game is that students are encouraged to collaborate. Members of the “active” team take turns listing correct answers – but meanwhile, the other team is in a huddle listing as many answers as they can, as a group – because if the first team draws a blank, the second team has the opportunity to “take the chances” to answer."
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#263228"
            android:padding="16dp">

            <TextView
                android:text="Rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="1.	Only team entries are available. "
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="2. A team shall consist of minimum 2 members and a maximum of 4 members. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="3. The decision of the quiz master will be final and will not be subjected to any change."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="4. The participants are not allowed to use mobile phones or any electronic instruments. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="5. The questions will be in the form of multiple choice, True/False, Specific answer, etc."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="6. Audience is not allowed to give any kind of hints or clues to the participants.       "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="7. Replacement of any team member is not allowed after team registration."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="8. Teams registered should give an appropriate name to their team by which they will be known.   "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="ELIMINATION ROUND (In Case more than 6 teams register) ….
        "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="1.	Each team will be given a set of 25 multiple choice questions. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="2.	Time limit – 15 minutes."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="3. Only 6 teams with maximum marks will be selected for next rounds. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="4.	In case of tie between 2 or more teams, 5 tie breaker questions will be asked for final selection. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="STAGE ROUNDS: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="ROUND 1: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="1. Each team will be asked 4 questions. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="2.	10 points will be rewarded for every correct answer and -5 for every wrong answer. No points will be deducted if team is unable to answer."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="3.	If a team is unable to answer the question the question will be passed on to another team and the team answering the passed question will be rewarded 5 points. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="4. Answering time is 30 seconds. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="5. Team discussion is allowed. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="ROUND 2: (Rapid fire round): "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView26"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="1. Each team will be asked 10 questions in 2 minute time. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="2. 10 points for every correct answer and -5 for every wrong answer. No points will be deducted if team is unable to answer."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="3. Unanswered questions will not be passed to another team. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="4. Team discussion is allowed."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="ROUND 3:(Buzzer round): "
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="1. A question will be asked and he team pressing the buzzer first will get to answer first."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView32"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />
            <TextView
                android:text="2. In all 6 questions will be asked."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="3. 10 marks for every correct answer and -5 for every wrong answer. No points will be deducted if team is unable to answer."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="4. If the team who presses the buzzer first is unable to answer the question the question will be passed to another team and the answering team will be awarded 5 points for the correct answer."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                android:textSize="14sp"
                android:textColor="#ffffff" />
            <TextView
                android:text="5. Answering time is 30 seconds."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                android:textSize="14sp"
                android:textColor="#ffffff" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#263228"
                android:padding="16dp">
                <TextView
                    android:text="Schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textAllCaps="true"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="14sp"
                    android:layout_marginBottom="30dp"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff"
                    android:text="April 06-07,2018 at GNIOT" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
