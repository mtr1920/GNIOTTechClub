<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:text="Circuit Sergeon" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#880E4F"
                android:padding="16dp">

            <ImageView
                android:id="@+id/imageView1"
                android:src="@drawable/circuit"
                android:layout_height="120dp"
                android:layout_width="130dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The competition of geniuses. The competition of designing of circuit, debugging of circuit using basic electronic knowledge. Students with confidence and basic knowledge in circuit and its working can participate in this Circuit Debugging contest."
                android:textStyle="normal"
                android:paddingRight="128dp"
                android:textSize="14sp"
                android:textColor="#ffffff" />

            </RelativeLayout>
            </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#880E4f"
                        android:padding="16dp">
                        <TextView
                            android:text="Rules"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:id="@+id/textView3"
                            android:textStyle="normal|bold"
                            android:textAllCaps="true"
                            android:textSize="18sp"
                            android:textColor="#ffffff" />


                        <TextView
                            android:text=" 1.	The participant will be given a MCQ paper."
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="2. There will be some cut-off marks. Who will qualify it will be send to 2nd round."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="3. The first round timing is 1 hour."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="4. The participant from 1st year are only eligible for 1st round. The highest marks scoring group  will be awarded."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="5. The participant from 2nd year to 4th who will qualify 1st round will be eligible for 2nd round."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="6. In 2nd round they have to make a circuit."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="7. The 2nd round timing is 1 hour. "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                        <TextView
                            android:text="8.	According to the judges, they will get 1st, 2nd and 3rd prize. "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textSize="14sp"
                            android:textColor="#ffffff" />
                    </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#880E4f"
                    android:padding="16dp">

                    <TextView
                        android:text="Schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:text="April 06-07,2018 at GNIOT"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/textView6"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
