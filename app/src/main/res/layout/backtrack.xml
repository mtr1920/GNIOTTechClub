<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:text="BackTrack" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0097A7"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:src="@drawable/backtrack"
                        android:layout_height="50dp"
                        android:layout_width="120dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:text="Rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:id="@+id/textView1"
                        android:textStyle="normal|bold"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textColor="#ffffff"/>

                </RelativeLayout>

                <TextView
                    android:text="1.	There are 3 set of question in which Participants has to Select 2 Set Randomly."
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="2.	Out of 2 Papers Participant has to choose 1 Paper by their own Choice."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="3.	Each Paper contains 1 Source Code with an Output."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="4.	Participants needs to write an alternate Code with Same Output."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="5.	There will be 3 Rounds."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="6.	Participants need to clear the 1st round to reach next level and so on."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="7.	There will be given 20-30 mins to each Round."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:text="8.	C language will be Provide to write a code."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textSize="14sp"
                    android:textColor="#ffffff" />


            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#0097A7"
                    android:padding="10dp">

                    <TextView
                        android:text="Schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:text=" April 06-07,2018 at GNIOT"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_marginBottom="30dp"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
