<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:text="Need For Speed" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFE0B2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/imageView1"
                        android:src="@drawable/cs"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•	The team should be of 5 members."
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="4dp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="•	Counter – Strike is a first – person shooter video game."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView23"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFE0B2"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/textView3"
                        android:textStyle="normal"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textColor="#000000" />


                    <TextView
                        android:text=" 1.	There will be group participation of 5 players each. "
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="2.	Maps: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="  a.	De dust2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="  b.	De nuke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="  c.	De train     "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="d.  De inferno    "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="3.	Coin toss will be done between two teams at a time.  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="4.	Winner of the toss will decide the map and loser will decide to choose between terrorist and counter-terrorist."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="5. Best of 11 rounds will decide the winner for the game till qualifying rounds. "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="6.	Sides will be switched after 6 rounds.   "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="7.	Best of 15 rounds will be played from semi-finals onward. "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="8.	Here sides will be switched after 8 rounds.  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="9.	Items banned in the game are: D3/AU-1, ES C90, Night Vision, Tactical shield, Krieg 550. "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="10.	Each round’s time will 1.45 minutes.   "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView19"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="11.	Initiated balance will be 800$.  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView20"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="12.	Freeze time will be 15 seconds. "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView21"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                    <TextView
                        android:text="  Disqualification is applicable for use of cheat codes, peeping in opponent team’s systems.   "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFE0B2"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                    android:text="Schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textAllCaps="true"
                    android:textStyle="normal"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                    <TextView
                        android:text="April 06-07,2018 at GNIOT"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="#000000" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>