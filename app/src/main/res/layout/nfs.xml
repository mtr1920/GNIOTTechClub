<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196f3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:text="Need For Speed" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e1f4fe"
                android:orientation="vertical">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/imageView1"
                    android:src="@drawable/nfs"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"/>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•	NFS is for individual players only."
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="4dp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="•	NFS, is a series of racing video games published by Electronic Arts (EA)."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    android:id="@+id/textView17"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e1f4fe"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                    android:text="Rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView3"
                    android:textStyle="normal"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="#000000" />


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="14sp"
                    android:text="1.	According to the number of entries the rules may vary. "
                    android:textColor="#000000" />

                <TextView
                    android:text="     -there will be four rounds."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="     -there should be knockout rounds. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="     -event of approx. 3 hours. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="     -players may bring their own gaming controls."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="2. Round 1:qualifying round (circuit race with 3 laps)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="  a. Two out of four will be selected for round 1 and the loosing player will be given another chance {rematch will be only happen if number of entries will be less}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="  b.	Rematch round: one out of four will be selected, other will be eliminated from the game (drag race) (optional based on entries)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="3. Round 2:sprint race between round 0 and rematch winners.        "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="4.	Round 3:nfs world loop, of round 2 winners(best two will be the finals)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                <TextView
                    android:text="5. Final round(best of three races)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textSize="14sp"
                    android:textColor="#000000" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e1f4fe"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:text="Schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textAllCaps="true"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:layout_marginBottom="30dp"
                        android:textColor="#000000"
                        android:text="April 06-07,2018 at GNIOT"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
